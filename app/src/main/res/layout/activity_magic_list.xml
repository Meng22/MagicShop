<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MagicListActivity" android:background="#4A4A4A">

    <TextView
            android:text="   Level One"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/tv_level1" android:textSize="30sp"
            android:background="#4A4A4A" android:textColor="#F2FFFFFF" android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/rv_level1"
            app:layout_constraintTop_toBottomOf="@id/tv_level1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
            android:text="   Level Two"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/tv_level2" android:textSize="30sp"
            android:background="#4A4A4A" android:textColor="#F2FFFFFF" android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/rv_level1"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rv_level2"
            app:layout_constraintTop_toBottomOf="@id/tv_level2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="   Level Three"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/tv_level3" android:textSize="30sp"
            android:background="#4A4A4A" android:textColor="#F2FFFFFF" android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/rv_level2"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rv_level3"
            app:layout_constraintTop_toBottomOf="@id/tv_level3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>