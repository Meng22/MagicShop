<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="#4A4A4A"
              android:id="@+id/dialog_laugh" android:paddingTop="25dp">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/dialog_image"
            android:layout_gravity="center" tools:layout_margin="15dp"/>
    <TextView
            android:text="保護罩  Shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_name" android:textColor="#EBFFFFFF"
            android:textSize="24sp" android:layout_gravity="center"/>
    <TextView
            android:text="$ 100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_price" android:textColor="#EBFFFFFF"
            android:textSize="24sp"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="110dp" android:layout_gravity="center" android:layout_marginTop="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="15dp" android:padding="5dp"
            android:layout_marginBottom="20dp">
        <Button
                android:text="取消"
                android:layout_width="wrap_content"
                android:background="@drawable/ic_background"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel" android:textColor="#FCFFFFFF"
                android:textSize="18sp" android:layout_marginEnd="24dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"/>
        <Button
                android:text="購買"
                android:layout_width="wrap_content"
                android:background="@drawable/ic_background"
                android:layout_height="wrap_content"
                android:id="@+id/btn_confirm" android:textColor="#FCFFFFFF"
                android:textSize="18sp" android:layout_marginEnd="40dp"
                android:layout_gravity="center" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>