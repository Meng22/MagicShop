<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="#4A4A4A"
              android:id="@+id/dialog_laugh" android:paddingTop="25dp">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/img_rollingEyes"
            android:src="@drawable/rolling_eyes"
            android:layout_gravity="center" tools:layout_margin="15dp"/>
    <TextView
            android:text="你的錢有帶夠嗎？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_text" android:textColor="#EBFFFFFF"
            android:textSize="24sp" android:layout_gravity="center" android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
    <Button
            android:text="掰"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_background"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bye" android:textColor="#FCFFFFFF"
            android:textSize="18sp" android:layout_gravity="center" android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
</LinearLayout>