<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".UserpageFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" android:background="#4A4A4A">
        <ImageView
                android:layout_width="0dp"
                android:src="@drawable/shop_banner"
                android:layout_height="203dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/img_banner" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"/>
        <ImageButton
                android:layout_width="51dp"
                android:layout_height="82dp" app:srcCompat="@drawable/death_knight"
                android:id="@+id/upperButton"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/img_banner" android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/img_banner" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" android:clickable="true"/>
        <ImageView
                android:layout_width="51dp"
                android:layout_height="82dp" app:srcCompat="@drawable/bugbear" android:id="@+id/downerButton"
                app:layout_constraintStart_toStartOf="@id/img_banner"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@id/img_banner" android:layout_marginBottom="10dp"
                android:clickable="true"/>
        <TextView
                android:text="法師 老余"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username" android:textSize="35sp"
                android:textColor="#E9FFFFFF" app:layout_constraintStart_toEndOf="@+id/img_user"
                android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/img_user"/>
        <ImageView
                android:layout_width="60dp"
                android:src="@drawable/ic_user"
                android:layout_height="60dp"
                android:id="@+id/img_user"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="94dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/img_banner"/>
        <ImageView
                android:layout_width="60dp"
                android:src="@drawable/ic_money"
                android:layout_height="60dp"
                android:id="@+id/img_money" android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/img_user" app:layout_constraintStart_toStartOf="@+id/img_user"
        />
        <TextView
                android:text="2,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_usermoney" android:textSize="35sp"
                android:textColor="#E9FFFFFF" app:layout_constraintStart_toEndOf="@+id/img_money"
                android:layout_marginStart="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/img_money"/>
        <Button
                android:text="              進入商店              "
                android:layout_width="wrap_content"
                android:background="@drawable/ic_background"
                android:layout_height="wrap_content" android:id="@+id/btn_shop"
                android:gravity="center_horizontal"
                android:textColor="#ffffff" android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="65dp" android:layout_marginStart="65dp" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_magicList" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="66dp" android:layout_marginRight="66dp"/>
        <Button
                android:text="              魔法列表              "
                android:layout_width="wrap_content"
                android:background="@drawable/ic_background"
                android:layout_height="wrap_content" android:id="@+id/btn_magicList"
                android:textColor="#ffffff" android:textSize="25sp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="65dp" android:layout_marginStart="65dp" android:layout_marginBottom="89dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="66dp" android:layout_marginRight="66dp"/>
        <Button
                android:text="Log out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_deleteToken" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_magicList" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
                android:layout_marginRight="162dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
